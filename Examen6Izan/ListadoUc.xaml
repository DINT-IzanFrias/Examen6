<UserControl x:Class="Examen6Izan.ListadoUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Examen6Izan"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Bottom" Content="Eliminar"></Button>
        <ListBox ItemsSource="{Binding Path=Deseos}" SelectedItem="{Binding Path=DeseoSeleccionado}">
        <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Margin="5"/>
                </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
    </ListBox>
    </DockPanel>
</UserControl>
